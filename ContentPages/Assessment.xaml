<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:CourseTracker.Models"
             x:Class="CourseTracker.ContentPages.Assessment">
    <ContentPage.Content>
        <StackLayout Orientation="Horizontal">
            <EntryCell Text="Assessment Title" x:Name="AssessmentTitle"/>
            <Picker x:Name="AssessmentType" BindingContext="AssessmentType">
                <Picker.ItemsSource>
                    <models:Assessment Type="ObjectiveAssessment"/>
                    <models:Assessment Type="PerformanceAssessment"/>
                </Picker.ItemsSource>
            </Picker>
            <Label Text="Assessment Start" />
            <DatePicker x:Name="AssessmentStart" MinimumDate="2001-01-01" MaximumDate="3001-01-01" />
            <Label Text="Assessment End" />
            <DatePicker x:Name="AssessmentEnd" MinimumDate="2001-01-01" MaximumDate="3001-01-01"/>
            <EntryCell Text="Course ID" x:Name="CourseId"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>