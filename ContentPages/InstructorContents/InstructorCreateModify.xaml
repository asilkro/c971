<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CourseTracker.ContentPages.InstructorContents.InstructorCreateModify">
    <ContentPage.Content>
            <StackLayout>
                <Label Text="Instructor Create/Modify" FontSize="Title" HorizontalOptions="Center" />
                <EntryCell Label="Instructor Name" x:Name="InstructorName" Text="{Binding InstructorName}" />
                <EntryCell Label="Instructor Email" x:Name="InstructorEmail" Text="{Binding InstructorEmail}" />
                <EntryCell Label="Instructor Phone" x:Name="InstructorPhone" Text="{Binding InstructorPhone}" />
            <Button Text="Save" x:Name="Save" Command="{Binding SaveButton}" />
            <Button Text="Cancel" x:Name="Cancel" Command="{Binding CancelButton}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>