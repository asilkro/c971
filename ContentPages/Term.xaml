<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CourseTracker.ContentPages.Term">
    <ContentPage.Content>
		<StackLayout>
			<Label Text="Term Name" />
			<Entry x:Name="TermName" />
			<Label Text="Start Date" />
			<DatePicker x:Name="StartDate" />
			<Label Text="End Date" />
			<DatePicker x:Name="EndDate" />
			<Button Text="Add Term" Clicked="AddTerm_OnButtonClicked" />
            <Button Text="Update Term" Clicked="UpdateTerm_OnButtonClicked" />
			<Button Text="Delete Term" Clicked="DeleteTerm_OnButtonClicked" />

		</StackLayout>
		</ContentPage.Content>
</ContentPage>