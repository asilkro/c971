<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CourseTracker.ContentPages.CourseContents.CourseCreateModify">
    <ContentPage.Content>
        <StackLayout>
            <EntryCell Label="Course Name" x:Name="CourseName"/>
            <EntryCell Label="Course Id" x:Name="CourseId"/>
            <EntryCell Label="Term Id" x:Name="TermId"/>
            <Label Text="Course Start Date"/>
            <DatePicker x:Name="StartDate"/>
            <Label Text="Course End Date"/>
            <DatePicker x:Name="EndDate"/>
            <EntryCell Label="Course Status" x:Name="Status"/>
            <EntryCell Label="Course Instructor" x:Name="Instructor"/> <!--TODO: Should I use all the fields? -->
            <Label Text="Course Notifications Enabled"/>
            <Switch x:Name="CourseNotifications" Toggled="CourseNotifications_OnToggled"/>
            <Label Text="Course Notes"/>
            <Editor x:Name="CourseNotes"/>

            <Button Text="Save" x:Name="Save"/>
            <Button Text="Cancel" x:Name="Cancel"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>