<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Models="clr-namespace:CourseTracker.Models"
             x:Class="CourseTracker.ContentPages.Course">
		<StackLayout BindingContext="Course">
			<Label Text="Course Start Date" />
			<DatePicker x:Name="CourseStartDate" />
			<Label Text="Course End Date" />
			<DatePicker x:Name="CourseEndDate" />
			<Label Text="Course Status" />
			<Picker x:Name="CourseStatusPicker" BindingContext="CourseStatuses">
				<Picker.ItemsSource>
				<Models:Course Status="awaitingEvaluation"/>
                <Models:Course Status="completed"/>
                <Models:Course Status="inProgress"/>
                <Models:Course Status="planned"/>
                <Models:Course Status="dropped"/>
            </Picker.ItemsSource>
</Picker>
			<Label Text="Course Instructor" />
			<Button Text="Add Course" Clicked="AddCourse_OnButtonClicked" />
			<Button Text="Update Course" Clicked="UpdateCourse_OnButtonClicked" />
			<Button Text="Delete Course" Clicked="DeleteCourse_OnButtonClicked" />
        </StackLayout>
</ContentPage>