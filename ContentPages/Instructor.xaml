<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CourseTracker.ContentPages.Instructor">
    <ContentPage.Content>
        <StackLayout BindingContext="Instructor">
            <Label Text="Instructor Name"/>
			<Entry x:Name="InstructorName"/>
			<Label Text="Instructor Email"/>
			<Entry x:Name="InstructorEmail"/>
			<Label Text="Instructor Phone"/>
			<Entry x:Name="InstructorPhone"/>
			<Button Text="Add Instructor" Clicked="AddInstructor_OnButtonClicked"/>
			<Button Text="Update Instructor" Clicked="UpdateInstructor_OnButtonClicked"/>
			<Button Text="Delete Instructor" Clicked="DeleteInstructor_OnButtonClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>