<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CourseTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:courseTracker="clr-namespace:CourseTracker"
    xmlns:contentPages="clr-namespace:CourseTracker.ContentPages" FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate courseTracker:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Courses"
        ContentTemplate="{DataTemplate contentPages:Course}"
        Route="//ContentPages/Course" />
    <ShellContent
        Title="Assessments"
        ContentTemplate="{DataTemplate contentPages:Assessment}" 
        Route="//ContentPages/Assessment" />
    <ShellContent
        Title="Terms"
        ContentTemplate="{DataTemplate contentPages:Term}"
        Route="//ContentPages/Term" >
		<contentPages:Term/>
    </ShellContent>
    <ShellContent
        Title="Course Instructors"
        ContentTemplate="{DataTemplate contentPages:Instructor}"
        Route="//ContentPages/Instructor" />

</Shell>

