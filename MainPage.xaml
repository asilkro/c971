<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CourseTracker.MainPage" Visual="">

    <FlexLayout Direction="Column" AlignItems="Center" JustifyContent="SpaceEvenly" 
                AlignContent="SpaceEvenly" class="" Margin="5" Wrap="Wrap" HorizontalOptions="CenterAndExpand" >
        <Label Text="Main Menu" FontSize="48" FlexLayout.AlignSelf="Auto"  />
        <Line IsVisible="True" IsEnabled="True"/>
        <Button Text="Terms" IsEnabled="True" Clicked="TermsButton_Clicked" FlexLayout.AlignSelf="Auto" />
        <Line IsVisible="True" FlexLayout.AlignSelf="Center"/>
        <Button Text="Courses" IsEnabled="True" Clicked="CoursesButton_Clicked" FlexLayout.AlignSelf="Auto"/>
        <Button Text="Assessments" IsEnabled="True" Clicked="AssessmentsButton_Clicked" FlexLayout.AlignSelf="Auto"/>
        <Button Text="Instructors" IsEnabled="True" Clicked="InstructorsButton_Clicked" FlexLayout.AlignSelf="Auto"/>
    </FlexLayout>


</ContentPage>

